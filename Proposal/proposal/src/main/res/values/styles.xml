<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="SpotsDialogDefault" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Loadingâ€¦</item>
        <item name="DialogSpotCount">5</item>
    </style>

    <declare-styleable name="FABToolbarLayout">
        <attr name="showDuration" format="integer"/>
        <attr name="hideDuration" format="integer"/>
        <attr name="verticalMargin" format="dimension"/>
        <attr name="horizontalMargin" format="dimension"/>
        <attr name="fadeInPivotX" format="dimension"/>
        <attr name="fadeInPivotY" format="dimension"/>
        <attr name="fadeInFraction" format="float"/>
        <attr name="fabId" format="reference"/>
        <attr name="containerId" format="reference"/>
        <attr name="fabToolbarId" format="reference"/>
        <attr name="fabDrawableAnimationEnabled" format="boolean"/>
    </declare-styleable>

    <style name="alert_dialog_color_theme_turquise" parent="android:Theme.DeviceDefault.Dialog">
        <item name="android:windowBackground">@color/PALETTE_TURQOUISE_MAIN_COLOR</item>
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogSpotColor">@color/PALETTE_TURQOUISE_MAIN_TEXT_COLOR</item>
        <item name="DialogSpotCount">8</item>
    </style>

    <style name="alert_dialog_color_theme_lightgreen" parent="android:Theme.DeviceDefault.Dialog">
        <item name="android:windowBackground">@color/PALETTE_LIGHTGREEN_MAIN_COLOR</item>
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogSpotColor">@color/PALETTE_LIGHTGREEN_MAIN_TEXT_COLOR</item>
        <item name="DialogSpotCount">8</item>
    </style>

    <style name="alert_dialog_color_theme_deeppurple" parent="android:Theme.DeviceDefault.Dialog">
        <item name="android:windowBackground">@color/PALETTE_DEEPPURPLE_MAIN_COLOR</item>
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogSpotColor">@color/PALETTE_DEEPPURPLE_MAIN_TEXT_COLOR</item>
        <item name="DialogSpotCount">8</item>
    </style>

</resources>
